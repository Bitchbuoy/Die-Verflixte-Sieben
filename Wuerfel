Klasse Würfel von Iliya:

import java.util.Random;
/**
 * 
 * @author Iliya 
 * @version 1.0
 */
public class Wuerfel
{
    // Instanzvariablen - ersetzen Sie das folgende Beispiel mit Ihren Variablen
    private int punkte;
    private int randomZahl;
    /**
     * Konstruktor für Objekte der Klasse Wuerfel
     */
    public Wuerfel()
    {
        
    }

    /**
     * Die punkte werden erstellt.
     */
    public int punkteAngeben()
    {
        return punkte;
    }
    
    /**
     * Es wird ein Zahl zwischen 1 bis 6 generiert.
     */
    private int zufallsZahlAusgeben(){
         
      
       Random wuerfel = new Random();
  
       
       randomZahl = 1 + wuerfel.nextInt(6);
       
      
       return randomZahl;
    }
    
    /**
     * Es wird ein zahl zwischen 1 bis 6 ausgerollt und per Konsole wiedergegeben.
     */
    public void rollen()
    {
        punkte = zufallsZahlAusgeben();
        System.out.println("Sie haben " + punkte + " gewürfelt.");
    }
}
